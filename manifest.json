{
    "name": "Attackpoint Enhancement Suite",    
    "version": "0.1",
    "manifest_version": 2,    
    
    "description": "Enhance your AP experience.",
    //"default_locale": "en",

    "icons": { 
        "16": "icons/running16.png",
        "48": "icons/running48.png",
        "128": "icons/running128.png"
    },

    "browser_action": {
        "default_title": "Attackpoint Enhancement Suite"
    },

    "author": "Cristina Luis",

    "background": {
        "scripts": ["jquery-1.11.1.min.js", 
                    "background.js"]        
    },

    "update_url": "http://wwww.boojumware.com/apes/updates.xml",

    "content_scripts": [
        {
            "matches": ["http://*.attackpoint.org/*"],
            "js": ["jquery-1.11.1.min.js", "enhancepage.js"],
            "css": ["css/font-awesome.css"]
        },
        
        {
            "matches": ["http://*.attackpoint.org/"],
            "js": ["openfavs.js", "jquery-1.11.1.min.js"]
        }

    ],
    

    "permissions": [
        "clipboardRead",
        "storage",
        "tabs",
        "http://*.attackpoint.org/",
        "http://attackpoint.org/"
    ],

    "web_accessible_resources": [
        "fonts/*"
    ],

    // Deprecated from Chrome 40 
    "options_page": "options.html",

    // New style options from Chrome 40
    "options_ui" : {
        "page": "options.html",
        "chrome_style": true
    }
}
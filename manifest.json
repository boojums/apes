{
	"name": "Hide unwanted Attackpoint comments",
	
	"version": "0.1",
	
	"manifest_version": 2,
	
	"description": "Hide comments from unwanted sources.",
	
	"background": {
		"scripts": ["background.js"],
	"update_url": "http://wwww.boojumware.com/aphide/updates.xml"
	},
	
	"page_action": {
		//"default_icon": "icon.png", //optional
		"default_title": "Hide comments" //optional
		//"default_popup": "popup.html" //optional - don't want it if you have an onClicked action
	},
	
	"permissions": [
		"tabs",
		"http://*.attackpoint.org/",
		"http://attackpoint.org/"
	]
}